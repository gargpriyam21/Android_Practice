<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pratap.ninja.newsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_me"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyNewTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyNewTheme"></activity>
        <activity
            android:name=".activities.NotesActivity"
            android:label="Notes"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme2" />
        <activity
            android:name=".activities.NewsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyThemePop" />
        <activity
            android:name=".activities.InfoActivity"
            android:label="App Info"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme2" />
        <activity
            android:name=".activities.ManageActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.MoviesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme2"/>
    </application>

</manifest>